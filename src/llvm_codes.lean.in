namespace llvm.
namespace code.

-- C.F. <llvm/IR/Type.h>, Type::TypeID
inductive type : Type
| void
| half
| float
| double
| x86_fp80
| fp128
| ppc_fp128
| label
| metadata
| x86_mmx
| token
| integer
| function
| struct
| array
| pointer
| vector
.

namespace type.
def asString : type -> String
| void       => "void"
| half       => "half"
| float      => "float"
| double     => "double"
| x86_fp80   => "x86_fp80"
| fp128      => "fp128"
| ppc_fp128  => "ppc_fp128"
| label      => "label"
| metadata   => "metadata"
| x86_mmx    => "x86_mmx"
| token      => "token"
| integer    => "integer"
| function   => "function"
| struct     => "struct"
| array      => "array"
| pointer    => "pointer"
| vector     => "vector"
.

end type.



inductive instr : Type
| Unused -- Burn constructor number 0, which is not used for any instruction value
#define HANDLE_INST( num, opcode, Class) | opcode
#include <llvm/IR/Instruction.def>
.

namespace instr.
def asString : instr -> String
| Unused => "Unused"
#define HANDLE_INST( num, opcode, Class) | opcode => #opcode
#include <llvm/IR/Instruction.def>
.
end instr.


inductive const : Type
#define HANDLE_CONSTANT( nm ) | nm
#include <llvm/IR/Value.def>
.

namespace const.
def asString : const -> String
#define HANDLE_CONSTANT( nm ) | nm => #nm
#include <llvm/IR/Value.def>
.
end const.


